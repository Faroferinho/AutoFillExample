        "import random\n",
        "\n",
        "def gameplayLoop(alternative):\n",
        "  options = [\"Pedra\", \"Papel\", \"Tesoura\", \"Lagarto\", \"Spock\"]\n",
        "  enemyOption = random.randint(1,5)\n",
        "\n",
        "  print(f\"Sua Opção Foi: {options[alternative - 1]} \\n\")\n",
        "  print(f\"Aternativa do Computador: {options[enemyOption - 1]}\\n\")\n",
        "\n",
        "  if alternative == enemyOption:\n",
        "    return \"Empate\"\n",
        "  elif (enemyOption in (3, 4) and alternative == 1) or \\\n",
        "       (enemyOption in (1, 5) and alternative == 2) or \\\n",
        "       (enemyOption in (2, 4) and alternative == 3) or \\\n",
        "       (enemyOption in (2, 5) and alternative == 4) or \\\n",
        "       (enemyOption in (1, 3) and alternative == 5):\n",
        "       return \"Você Ganhou!\"\n",
        "  elif (alternative in (3, 4) and enemyOption == 1) or \\\n",
        "       (alternative in (1, 5) and enemyOption == 2) or \\\n",
        "       (alternative in (2, 4) and enemyOption == 3) or \\\n",
        "       (alternative in (2, 5) and enemyOption == 4) or \\\n",
        "       (alternative in (1, 3) and enemyOption == 5):\n",
        "       return \"Você perdeu!\"\n",
        "\n",
        "\n",
        "print(\"Vamos jogar Pedra-Papel-Tesoura-Lagarto-Spock\");\n",
        "\n",
        "while True:\n",
        "  playerInput = int(input(\"Selecione uma Alternativa?\\n[1] Pedra\\n[2] Papel\\n[3] Tesoura\\n[4] Lagarto\\n[5] Spock\\n[6] Sair\\n\"))\n",
        "\n",
        "  if playerInput == 6:\n",
        "    print(\"Obrigado por jogar!\")\n",
        "    break\n",
        "  elif playerInput in (1, 2, 3, 4, 5):\n",
        "    print(gameplayLoop(playerInput));\n",
        "  else:\n",
        "    print(\"Opção inválida, seu feio. Tente de novo\\n\")"
      ]
    }
  ]
}